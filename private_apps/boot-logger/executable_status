# Check shutdown marker service
echo "ğŸ”µ Shutdown Marker Service:"
sudo systemctl status boot-logger-shutdown.service --no-pager -l || true
echo ""

# Show recent boot events
if [ -f /var/log/boot-tracker.log ]; then
    echo "ğŸ“ Recent Boot Events:"
    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
    sudo tail -n 30 /var/log/boot-tracker.log
else
    echo "âš ï¸  No boot log found at /var/log/boot-tracker.log"
fi
